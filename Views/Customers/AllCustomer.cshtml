@* import/get list from customer table/model*@

@model List<Patel_DBP_A7_Project3.Models.Customer>
@{
    ViewBag.Title = "All Customer";
}

<h2>List of Customer</h2>

<a href="/Customers/AddOrUpdateCustomer">Add New Customer</a>

<div class="row">
    <div class="col-md-6">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-6">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.Search();" />
    </div>
</div>

<table class="sortable table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0, true);">Customer Id</th>
            <th onclick="Sortable.Sort(1, true);">Customer Name</th>
            <th onclick="Sortable.Sort(2, true);">Address</th>
            <th onclick="Sortable.Sort(3, true);">City</th>
            <th onclick="Sortable.Sort(4, true);">State</th>
            <th onclick="Sortable.Sort(5, true);">Zip Code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @*Loop through the "allCustomers" list to display CustomerId and Customer *@
        @*customer is an object/entity of Customer Class/Model through which we can access all the fields of that model/class/table *@

        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerID</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>@customer.City</td>
                <td>@customer.State</td>
                <td>@customer.ZipCode</td>
                <td>
                    <a href="/Customers/AddOrUpdateCustomer/@customer.CustomerID">Edit</a>
                    <a href="/Customers/DeleteCustomer/@customer.CustomerID">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    Sortable.baseUrl = '/Customers/AllCustomer/';
</script>

